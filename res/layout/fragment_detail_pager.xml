<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >	
    
    <ScrollView
        android:id="@+id/detail_scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/detail_map_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <android.support.v4.view.ViewPager
                android:id="@+id/detail_image_view_pager"
                android:layout_width="fill_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:visibility="visible" />

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/indicator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dip" />

            <LinearLayout
                android:id="@+id/layout_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/detail_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="物件Title"
                    android:textSize="@dimen/detail_title_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detail_text_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物件位置"
                    android:textSize="@dimen/detail_text_size" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/marker_rent" />

                    <TextView
                        android:id="@+id/detail_money_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="$20000元/月, 押金2個月" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/detail_deposit_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="整層出租"
                        android:textSize="@dimen/detail_text_size" />

                    <TextView
                        android:id="@+id/detail_type_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="型態: 公寓"
                        android:textSize="@dimen/detail_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/detail_arrange_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="3房2廳一衛"
                        android:textSize="@dimen/detail_text_size" />

                    <TextView
                        android:id="@+id/detail_area_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="坪數: 5坪"
                        android:textSize="@dimen/detail_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line_0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/detail_layers_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="樓層: 4/4樓"
                        android:textSize="@dimen/detail_text_size" />

                    <TextView
                        android:id="@+id/detail_parking_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="車位: 平面坡道"
                        android:textSize="@dimen/detail_text_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_detail_others"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="visible" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="特色說明"
                    android:textSize="@dimen/detail_title_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/line_gray" />

                <TextView
                    android:id="@+id/detail_feature_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="特色內容"
                    android:textSize="@dimen/detail_text_size" />

                <TextView
                    android:id="@+id/detail_other_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="*最短租期: 一年\n*開伙: 不可\n*養寵物: 不可\n*身份要求: 學生,上班族\n*性別要求: 男女皆可"
                    android:textSize="@dimen/detail_text_size" />

                <TextView
                    android:id="@+id/detail_furniture_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="提供傢俱: 洗衣機,冰箱,電視,冷氣,熱水器,第四台"
                    android:textSize="@dimen/detail_text_size" />

                <TextView
                    android:id="@+id/detail_equipment_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="提供設備: 洗衣機,冰箱,電視,冷氣,熱水器,第四台"
                    android:textSize="@dimen/detail_text_size" />

                <TextView
                    android:id="@+id/detail_living_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="生活機能: 近便利商店；傳統市場；百貨公司；學校；醫療機構；夜市"
                    android:textSize="@dimen/detail_text_size" />

                <TextView
                    android:id="@+id/detail_cummunication_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="交通: 近竹南汽火車站公車站"
                    android:textSize="@dimen/detail_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_detail_others"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="位置"
                    android:textSize="@dimen/detail_title_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/line_gray" />

                <LinearLayout
                    android:id="@+id/linear_location"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/linear_location_direct"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/transparent_button"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                         >

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:clickable="false"
                            android:src="@drawable/map_direction" />

                        <TextView
                            android:id="@+id/house_price_changing_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:clickable="false"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:text="交通指引" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_location_amenities"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/transparent_button"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                         >

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:clickable="false"
                            android:src="@drawable/map_amenities" />

                        <TextView
                            android:id="@+id/house_price_data_list_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:clickable="false"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:text="附近設施" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_location_streetview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/transparent_button"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp" >

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:clickable="false"
                            android:src="@drawable/map_street_view" />

                        <TextView
                            android:id="@+id/house_price_data_list_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:clickable="false"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:text="Google街景" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_detail_others"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="聯絡方式"
                    android:textSize="@dimen/detail_title_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/contact_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/image_border"
                        android:src="@drawable/contact_man" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/contact_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="聯絡人: 陳先生" />

                        <TextView
                            android:id="@+id/contact_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="phone: 0933456789" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/call_imagebutton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/call_red" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="0dp"
            android:background="@color/line_gray" />

        <LinearLayout
            android:id="@+id/linear_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"         
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/linear_contact"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/transparent_button"
                android:gravity="center"
                android:orientation="horizontal" >

                <!--
                     <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:clickable="false"
                    android:src="@drawable/area_location" />
                -->

                <TextView
                    android:id="@+id/house_price_changing_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:clickable="false"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="聯絡方式" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/gray_1" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_add_favorite"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/transparent_button"
                android:gravity="center"
                android:orientation="horizontal" >

                <!--
                     <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:clickable="false"
                    android:src="@drawable/icon_house" />
                -->

                <TextView
                    android:id="@+id/detail_add_favorite_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:clickable="false"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="加入最愛" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/adLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>